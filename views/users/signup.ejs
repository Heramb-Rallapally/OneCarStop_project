<% layout("layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="signup_heading_div">
        <h1 class="signup_heading">Signup To OneCarStop</h1>
        <form action="/signup" method="POST" class="signup_form needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"  style="font-size: 30px;">Username</label>
                <input
                    name="username"
                    id="username"
                    type="text"
                    class="form-control"
                    required
                />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label" style="font-size: 30px;" >Email</label>
                <input
                    name="email"
                    id="email"
                    type="email"
                    class="form-control"
                    required
                />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label" style="font-size: 30px;">Password</label>
                <input
                    name="password"
                    id="password"
                    type="password"
                    class="form-control"
                    required
                />
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>

<img class="signup_image" src="/images/apnaimage.jpg" alt="signup_car" />